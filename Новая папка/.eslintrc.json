{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"airbnb",
		//"eslint:recommended",
		"prettier"
	],
	"plugins": ["prettier"],
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"rules": {
		"prettier/prettier": "error",
		"camelcase": ["error"],
		"declaration-block-no-redundant-longhand-properties": [
			1,
			{"ignoreShorthands": ["flex", "margin", "padding"]}
		],
		"strict": "error",
		"resolveNestedSelectors": 2,
		"eqeqeq": ["error", "always"]
	}
}
